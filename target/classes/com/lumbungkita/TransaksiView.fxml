<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #263238;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lumbungkita.CONTROLLER.TransaksiController">
   <children>
      <HBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            
            <VBox prefWidth="350.0" spacing="15.0" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 5;">
               <children>
                  <Label text="Input Transaksi" textFill="#2c3e50">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>

                  <VBox spacing="5.0">
                     <children>
                        <Label text="ID Pembeli:" textFill="#34495e" />
                        <TextField fx:id="tfIdPembeli" promptText="Contoh: 101" style="-fx-font-size: 14;" />
                     </children>
                  </VBox>

                  <VBox spacing="5.0">
                     <children>
                        <Label text="ID Hasil Panen:" textFill="#34495e" />
                        <TextField fx:id="tfIdPanen" promptText="Contoh: 5" style="-fx-font-size: 14;" />
                     </children>
                  </VBox>

                  <VBox spacing="5.0">
                     <children>
                        <Label text="Jumlah Pembelian:" textFill="#34495e" />
                        <TextField fx:id="tfJumlah" promptText="0" style="-fx-font-size: 14;" />
                     </children>
                  </VBox>

                  <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleTambah" prefHeight="40.0" style="-fx-background-color: #2980b9; -fx-cursor: hand;" text="+ Tambah ke Keranjang" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>

                  <VBox spacing="5.0">
                     <children>
                        <Label text="Total Pembayaran:" textFill="#7f8c8d">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblTotalBayar" text="Rp 0,00" textFill="#c0392b">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                        </Label>
                     </children>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </VBox>

                  <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#handleCheckout" prefHeight="50.0" style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="SIMPAN TRANSAKSI" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Button>
               </children>
            </VBox>

            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Keranjang Belanja" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>

                  <TableView fx:id="tblKeranjang" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colIdBrg" prefWidth="75.0" text="ID" />
                      <TableColumn fx:id="colNamaBrg" prefWidth="200.0" text="Nama Barang" />
                      <TableColumn fx:id="colQty" prefWidth="75.0" text="Qty" />
                      <TableColumn fx:id="colHargaBrg" prefWidth="120.0" text="Harga @" />
                      <TableColumn fx:id="colSubtotal" prefWidth="120.0" text="Subtotal" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>

                  <Button mnemonicParsing="false" onAction="#handleHapusItem" style="-fx-background-color: #e74c3c; -fx-cursor: hand;" text="Hapus Item Terpilih" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>

         </children>
      </HBox>
   </children>
</AnchorPane>