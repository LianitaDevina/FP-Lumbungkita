<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #263238;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lumbungkita.CONTROLLER.PembeliController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>

            <AnchorPane style="-fx-background-color: #263238;">
               <effect>
                  <DropShadow color="#0000001a" radius="5.0" spread="0.1" />
               </effect>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <GridPane hgap="15.0" vgap="15.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Nama Pembeli :" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtNama" promptText="Masukkan nama lengkap..." style="-fx-background-radius: 4; -fx-border-color: #dddddd; -fx-border-radius: 4;" GridPane.columnIndex="1">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </TextField>

                        <Label text="Tipe Pembeli :" textFill="WHITE" GridPane.rowIndex="1">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="cbTipe" prefWidth="250.0" promptText="-- Pilih Tipe --" style="-fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Nomor HP :" textFill="WHITE" GridPane.rowIndex="2">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="txtNoHp" promptText="08xxxxx" style="-fx-background-radius: 4; -fx-border-color: #dddddd; -fx-border-radius: 4;" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <font>
                              <Font size="13.0" />
                           </font>
                        </TextField>
                     </children>
                  </GridPane>
               </children>
            </AnchorPane>

            <HBox prefHeight="120.0" prefWidth="760.0" spacing="10.0">
               <children>
                  <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAdd" prefHeight="35.0" prefWidth="122.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-font-weight: bold;" text="Simpan" />
                  <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-font-weight: bold;" text="Edit" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-font-weight: bold;" text="Hapus" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#handleClear" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-background-radius: 4; -fx-cursor: hand; -fx-font-weight: bold;" text="Bersihkan" />
               </children>
            </HBox>

            <VBox prefWidth="697.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
               <effect>
                  <DropShadow color="#0000001a" radius="5.0" spread="0.1" />
               </effect>
               <children>
                  <TableView fx:id="tablePembeli" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colId" prefWidth="50.0" style="-fx-alignment: CENTER;" text="ID" />
                      <TableColumn fx:id="colNama" prefWidth="200.0" text="Nama Pembeli" />
                        <TableColumn fx:id="colTipe" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Tipe" />
                        <TableColumn fx:id="colNoHp" prefWidth="150.0" style="-fx-alignment: CENTER;" text="No HP" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>

         </children>
      </VBox>
   </children>
</AnchorPane>