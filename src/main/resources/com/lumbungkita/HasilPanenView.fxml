<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.lumbungkita.CONTROLLER.HasilPanenController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="Nama Hasil Panen:" />
            <TextField fx:id="tfNamaHasil" promptText="Contoh: Beras Cianjur" />
            
            <Label text="Jenis Hasil Panen:" />
            <TextField fx:id="tfJenisHasil" promptText="Contoh: Padi" />
            
            <Label text="Harga Jual (Rp):" />
            <TextField fx:id="tfHargaJual" promptText="Contoh: 12000" />
            
            <Label text="Stok (Kg):" />
            <TextField fx:id="tfStok" promptText="Contoh: 500" />
            
            <Label text="ID Petani:" />
            <TextField fx:id="tfIdPetani" promptText="Masukkan ID Petani (Angka)" />

            <HBox spacing="10.0">
               <children>
                  <Button text="Tambah" onAction="#handleTambah" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                  <Button text="Ubah" onAction="#handleUbah" style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                  <Button text="Hapus" onAction="#handleHapus" style="-fx-background-color: #F44336; -fx-text-fill: white;" />
                  <Button text="Bersihkan" onAction="#handleClear" />
               </children>
            </HBox>

            <TableView fx:id="tableHasilPanen" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colIdPanen" text="ID" prefWidth="50.0" />
                <TableColumn fx:id="colNamaHasil" text="Nama Hasil" prefWidth="150.0" />
                <TableColumn fx:id="colJenisHasil" text="Jenis" prefWidth="100.0" />
                <TableColumn fx:id="colHarga" text="Harga" prefWidth="100.0" />
                <TableColumn fx:id="colStok" text="Stok" prefWidth="80.0" />
                <TableColumn fx:id="colIdPetani" text="ID Petani" prefWidth="80.0" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>